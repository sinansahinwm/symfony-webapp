{% extends 'layout/auth.html.twig' %}

{% block pageTitle %}{{ 'Şifrenizi Sıfırlayın'|trans }}{% endblock %}

{% form_theme resetForm with ['bootstrap_5_layout.html.twig'] only %}

{% block body %}
    <div class="d-flex col-12 col-lg-5 col-xl-4 align-items-center authentication-bg p-4 p-sm-5">
        <div class="w-px-400 mx-auto">
            <div class="app-brand mb-4">
                <a href="{{ path(layout.admin.logoPath) }}" class="app-brand-link gap-2 mb-2">
                <span class="app-brand-logo demo">
                  {% include 'layout/partials/_logo_svg.html.twig' %}
                </span>
                    <span class="app-brand-text demo h3 mb-0 fw-bold">
                        {{ layout.admin.logoText }}
                    </span>
                </a>
            </div>
            <h4 class="mb-2">{{ 'Şifrenizi Sıfırlayın'|trans }} 🔒</h4>
            <p class="mb-4">{{ 'Devam etmek için kayıtlı e-posta adresinizi girin'|trans }}</p>
            {{ form_start(resetForm) }}
            {{ form_row(resetForm.plainPassword) }}
            <button class="btn btn-primary d-grid w-100 mb-3">{{ 'Şifremi Sıfırla'|trans }}</button>
            <div class="text-center">
                <a href="{{ path('app_auth_signin') }}">
                    <i class="bx bx-chevron-left scaleX-n1-rtl"></i>
                    {{ 'Giriş sayfasına git'|trans }}
                </a>
            </div>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}

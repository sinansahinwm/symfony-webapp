{% extends 'layout/admin.html.twig' %}

{% block pageTitle %}{{ 'Abonelik Planı Satın Al'|trans }}{% endblock %}
{% block contentTitle %}{{ 'Abonelik Planı Satın Al'|trans }}{% endblock %}

{% block pageActions %}
    <a href="{{ path('app_admin_exclude_subscription_plan_index') }}" class="btn btn-secondary">
        {{ 'Diğer Planlara Gözat'|trans }}
    </a>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-6">
            {{ component('_subscription_plan', { plan: thePlan, hideActions: true, trialUsed: app.user.trialPeriodUsed }) }}
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">

                    <div class="d-flex justify-content-between">
                        <h5>
                            {{ 'Ödeme Yapın'|trans }}
                        </h5>
                        <img src="{{ asset('build/media/iyzico-logo-pack/footer_iyzico_ile_ode/Colored/logo_band_colored@2x.png') }}" class="img-fluid h-100 w-50" alt="{{ 'Iyzico ile Öde'|trans }}">
                    </div>
                </div>
                <div class="card-body">

                    {{ form_start(checkoutForm) }}
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label w-100" for="plan_checkout_card_number">{{ 'Kart Numarası'|trans }}</label>
                            <div class="input-group input-group-merge">
                                {{ form_widget(checkoutForm.card_number) }}
                                <span class="input-group-text cursor-pointer p-1">
                                    <span class="card-type"></span>
                                </span>
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label" for="plan_checkout_name">{{ 'Kart Sahibinin Adı' }}</label>
                            {{ form_widget(checkoutForm.name) }}
                        </div>
                        <div class="col-6 col-md-3">
                            <label class="form-label" for="plan_checkout_exp_date">{{ 'Son Kullanım T.'|trans }}</label>
                            {{ form_widget(checkoutForm.exp_date) }}
                        </div>
                        <div class="col-6 col-md-3">
                            <label class="form-label" for="plan_checkout_cvv">{{ 'CVV'|trans }}</label>
                            <div class="input-group input-group-merge">
                                {{ form_widget(checkoutForm.cvv) }}
                                <span class="input-group-text cursor-pointer" id="paymentCardCvv2">
                                    <i class="bx bx-help-circle text-muted" data-bs-toggle="tooltip" data-bs-placement="top" title="{{ 'Genellikle kredi kartınızın arkasında yer alan üç haneli kod.' }}"></i>
                                </span>
                            </div>
                        </div>

                        <!--
                        <div class="col-12 d-flex justify-content-center">
                            <button type="submit" class="btn btn-success btn-block">
                                <i class="bx bx-lock me-2"></i>
                                {{ 'Ödeme İşlemini Tamamla'|trans }}
                            </button>
                        </div>

                        -->

                        <div class="d-flex justify-content-center">
                            <button class="btn btn-success" type="submit">
                                {% if app.request.locale is same as("tr") %}
                                    <img src="{{ asset('build/media/iyzico-logo-pack/checkout_iyzico_ile_ode/TR/Tr_White_Horizontal/iyzico_ile_ode_horizontal_white.png') }}" class="img-fluid w-25" alt="{{ 'Iyzico ile Öde'|trans }}">
                                {% else %}
                                    <img src="{{ asset('build/media/iyzico-logo-pack/checkout_iyzico_ile_ode/EN/En_White_Horizontal/pay_with_iyzico_horizontal_white.png') }}" class="img-fluid w-25" alt="{{ 'Iyzico ile Öde'|trans }}">
                                {% endif %}
                            </button>
                        </div>


                    </div>
                    {{ form_end(checkoutForm) }}

                </div>
            </div>
        </div>
    </div>

{% endblock %}
